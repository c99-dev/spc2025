<div class="container py-4">
  <div class="row">
    <div class="col-lg-12 mb-4">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title">
            <i class="bi bi-person-circle me-2"></i><%= user.name %>님의 프로필
          </h2>
          <p class="card-text text-muted">사용자명: <%= user.username %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="bi bi-chat-left-text me-2"></i>내가 작성한 댓글
          </h4>
        </div>
        <div class="card-body">
          <% if (comments && comments.length > 0) { %>
          <ul class="list-group list-group-flush">
            <% comments.forEach(comment => { %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <p class="mb-1"><%= comment.content %></p>
                  <a
                    href="/music/<%= comment.music_id %>"
                    class="text-decoration-none"
                  >
                    <small class="text-muted"
                      ><i class="bi bi-music-note me-1"></i><%= comment.title
                      %></small
                    >
                  </a>
                </div>
                <small class="text-muted"
                  ><%= new Date(comment.created_at).toLocaleDateString()
                  %></small
                >
              </div>
            </li>
            <% }); %>
          </ul>
          <% } else { %>
          <div class="text-center py-4">
            <i
              class="bi bi-chat-left-text text-muted"
              style="font-size: 2rem"
            ></i>
            <p class="mt-2 text-muted">작성한 댓글이 없습니다.</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-lg-6 mb-4">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><i class="bi bi-heart me-2"></i>좋아요한 음악</h4>
        </div>
        <div class="card-body">
          <% if (likedMusic && likedMusic.length > 0) { %>
          <ul class="list-group list-group-flush">
            <% likedMusic.forEach(music => { %>
            <li class="list-group-item">
              <div class="d-flex justify-content-between align-items-center">
                <a href="/music/<%= music.id %>" class="text-decoration-none">
                  <div>
                    <h6 class="mb-1"><%= music.title %></h6>
                    <small class="text-muted"><%= music.artist %></small>
                  </div>
                </a>
                <span class="badge bg-primary rounded-pill">
                  <i class="bi bi-heart-fill me-1"></i><%= music.like_count %>
                </span>
              </div>
            </li>
            <% }); %>
          </ul>
          <% } else { %>
          <div class="text-center py-4">
            <i class="bi bi-heart text-muted" style="font-size: 2rem"></i>
            <p class="mt-2 text-muted">좋아요한 음악이 없습니다.</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
